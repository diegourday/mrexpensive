---
import FacebookLive from "./common/FacebookLive.astro";
---

<section
  class="relative mt-20 flex flex-col bg-[url('/inicio/relive-bg.jpg')] bg-cover bg-fixed bg-top after:absolute after:inset-0 after:bg-primary/60 md:h-[250px]"
>
  <div
    class="z-10 m-auto flex flex-col items-center gap-6 px-8 py-16 text-center text-white md:flex-row"
  >
    <h2 class="text-2xl font-bold">¡Revive la emoción de tus partidos aquí!</h2>
    <a
      href="https://www.facebook.com/Misterexpensivestudio/live_videos"
      target="_blank"
      class="animate-none rounded-lg bg-white/85 px-4 py-3 transition-all hover:scale-110 hover:bg-white"
    >
      <FacebookLive class="h-8" />
    </a>
  </div>
</section>
