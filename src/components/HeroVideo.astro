---
import LogoTexto from "@/components/common/LogoText.astro";
---

<section class="bg-primary">
  <div
    id="video-section"
    class="relative z-10 grid h-dvh w-full place-content-center transition-all"
  >
    <video
      autoplay
      loop
      muted
      playsinline
      preload="metadata"
      id="video"
      class="absolute -z-10 h-full w-full object-cover"
    >
      <source src="/hero-video.mp4" type="video/mp4" />
    </video>
    <div class="m-auto grid justify-items-center gap-6">
      <LogoTexto class="w-11/12 text-white md:w-[600px]" />
    </div>
  </div>
</section>
